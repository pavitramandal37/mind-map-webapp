# Application Settings
# IMPORTANT: Generate your own SECRET_KEY using: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-here-replace-this
ENVIRONMENT=development

# Database Settings
DATABASE_URL=sqlite:///./mindmap.db
# For PostgreSQL (production): postgresql://user:password@localhost/mindmap_db

# Security Settings
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# CORS Settings (comma-separated)
CORS_ORIGINS=["http://localhost:8000","http://127.0.0.1:8000"]

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
LOGIN_RATE_LIMIT=5
